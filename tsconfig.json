{
  "compilerOptions": {
    "module": "ESNext",

    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "public/js",
    "rootDir": "resources/js"
  },
  "include": ["resources/js"],
  "exclude": ["node_modules"]
}